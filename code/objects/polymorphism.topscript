#part 1
let area sq = sq#width ** 2.;;
let minimize sq : unit = sq#resize 1.;;
let limit sq = 
  if (area sq) > 10. then minimize sq;;

#part 2
let toggle sq b : unit = 
  if b then sq#resize `Fullscreen
  else minimize sq;;

#part 3
let area_closed (r: < width : float >) = r#width ** 2.;;
let sq = object
  method width = 3. 
  method name = "sq" 
end;;
area_closed sq;;

#part 4
type square = < width : float; ..>;;

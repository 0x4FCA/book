#!/bin/sh
# Designed for the Travis CI build environment. See .travis.yml

set -ex
#echo Using Hub build due to a Travis build hanging
#docker pull ocaml/rwo
mkdir -p $TRAVIS_BUILD_DIR/site
docker run --name temp-container -v $TRAVIS_BUILD_DIR/site:/out ocaml/rwo sh -c "opam config exec -- make && sudo cp -r /home/opam/src/_build/default/site/* /out"
find $TRAVIS_BUILD_DIR/site
